<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_requisition_from_sale_order" model="ir.ui.view">
        <field name="name">sale.order.form.requisition_from_sale_order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
             <xpath expr="//header" position="inside">
                <button name="action_requisition" string="Generate requisition" class="btn btn-secondary" type="object" attrs="{'invisible': [('requisitions_count','!=', 0)]}"/>
            </xpath>
             <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_view_requisitions" type="object" icon="fa-credit-card" attrs="{'invisible': [('requisitions_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="requisitions_count"/></span>
                        <span class="o_stat_text">Requisition</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
