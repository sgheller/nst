<?xml version="1.0"?>
<odoo>
    <template id="phi_incoterm_description.report_purchaseorder_document_incoterm_description" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@t-if='o.incoterm_id']" position="replace">
            <div t-if="o.incoterm_id" class="col-3 bm-2">
                <strong>Incoterm:</strong>
                <p t-field="o.incoterm_full_name" class="m-0"/>
            </div>
        </xpath>

    </template>

    <template id="phi_incoterm_description.report_purchasequotation_document_incoterm_description" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//div[@t-if='o.incoterm_id']" position="replace">
            <div t-if="o.incoterm_id" class="col-3 bm-2">
                <strong>Incoterm:</strong>
                <p t-field="o.incoterm_full_name" class="m-0"/>
            </div>
        </xpath>
    </template>

</odoo>
